<div class="users">
  <% if notice %>
    <div class="notice">
      <%= notice %>
    </div>
  <% end %>
  <% @users.each do |user| %>
    <div class="user">
      <p>Логин: <%= link_to user.name, user %></p>
      <p class="info">Дата добавления: <%= date(user.created_at) %></p>
      <div class="actions">
        <%= link_to "Редактировать", edit_user_path(user) %>
        <%= link_to "Удалить", user, :confirm => "Уверены?", :method => :delete %>
      </div>
    </div>
  <% end %>
  <div class="action">
    <%= link_to "Добавить пользователя", new_user_path %>
  </div>
</div>
<%= will_paginate(@users) %>