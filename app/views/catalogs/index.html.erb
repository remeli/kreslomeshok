<div class="catalog_all">
  <% if notice %>
    <div class="notice">
      <%= notice %>
    </div>
  <% end %>
  <% @catalogs.each do |catalog| %>
    <div class="product">
      <div class="title">
        <%= link_to catalog.title, catalog %>
      </div>
      <div class="photo">
        <%= image_tag catalog.photo.url(:thumb) %>
      </div>
      <div class="info">
        <p>Цена: <%= catalog.price %> тенге</p>
        <p>Габариты: <%= catalog.dimensions %></p>
        <p class="created_at">Дата добавления: <%= date(catalog.created_at) %></p>
      </div>
      <% if session[:user_id] %>
        <div class="actions">
          <%= link_to "Редактировать", edit_catalog_path(catalog) %>
          <%= link_to "Удалить", catalog, :confirm => "Уверены?", :method => :delete %>
        </div>
      <% end %>
    </div>
  <% end %>  
  <% if session[:user_id] %>
    <div class="action" style="clear:both; margin-left:70px;">
      <%= link_to "Добавить продукт", new_catalog_path %>
    </div>
  <% end %>
</div>
<%= will_paginate @catalogs %>

