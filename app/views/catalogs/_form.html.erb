<%= form_for(@catalog) do |f| %>
  <%= error_messages_for(@catalog) %>
  <div class="field">
    <%= f.label :title, "Название продукта:" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :permalink, "Прямая ссылка:" %><br />
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :price, "Цена:" %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :dimensions, "Габариты:" %><br />
    <%= f.text_field :dimensions %>
  </div>
  <div class="field">
    <%= f.label :description, "Описание:" %><br />
    <%= f.text_area :description, :cols => 30, :rows => 5 %>
  </div>
  <div class="submit">
    <%= f.submit "Отправить" %>
  </div>
<% end %>