<div class="one_post">
  <div class="title">
    <%= @post.title %>
  </div>
  <div class="body">
    <%= raw(@post.body) %>
  </div>
  <div class="info">
    Дата добавления: <%= date(@post.created_at)  %>
  </div>
  <div class="like">
    <div id="vk_like"></div>
    <script type="text/javascript">
    VK.Widgets.Like("vk_like", {type: "mini"});
    </script>
    <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="" send="true" width="450" show_faces="true" action="like" font=""></fb:like>
  </div>
  <% if session[:user_id] %>
    <div class="actions" style="margin-top:10px; margin-left:10px;">
      <%= link_to "Редактировать", edit_post_path(@post) %>
      <%= link_to "Удалить", @post, :confirm => "Уверены?", :method => :delete %>
    </div>
  <% end %>
</div>
<div class="comments">
  <p class="title">Комментарии:</p>
  <div id="vk_comments"></div>
  <script type="text/javascript">
  VK.Widgets.Comments("vk_comments", {limit: 10, width: "570", attach: "*"});
  </script>
</div>