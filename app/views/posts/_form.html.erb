<%= form_for @post do |f| %>
  <%= error_messages_for(@post) %>
  <div class="field">
    <%= f.label :title, "Название новости:" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Текст:" %><br />
    <%= f.text_area :body, :cols => 50, :rows => 10 %>
  </div>
  <div class="submit">
    <%= f.submit "Отправить" %>
  </div>
<% end %>