<div class="form">
  <% if flash[:alert] %>
    <p class="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <div class="title">
      Вход
    </div>
    <div class="field">
      <label for="name">Имя:</label><br />
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div class="field">
      <label for="password">Пароль:</label><br />
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="submit">
      <%= submit_tag "Войти" %>
    </div>
  <% end %>
</div>